@model IEnumerable<DoctorManage.Models.Database.DEPARTMENT>

@{
    ViewBag.Title = "Department";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create Department", "Create",new {}, new { @class = "btn btn-primary"})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DEPARTMENTNAME)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CREATEBY)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DEPARTMENTNAME)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CREATEBY)
        </td>
     
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.DEPARTMENTID  }, new { @class = "btn btn-primary" }) |
            @Html.ActionLink("Details", "Details", new { id=item.DEPARTMENTID }, new {  @class = "btn btn-primary" }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.DEPARTMENTID  }, new {  @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
